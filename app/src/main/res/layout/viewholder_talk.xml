<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_margin="@dimen/margin_medium"
    android:background="@drawable/google_io_18">

   <TextView
       android:id="@+id/tv_talker"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="@dimen/text_regular_2x"
       android:text="Sundar Pichai"
       android:layout_above="@+id/tv_talk_content"
       android:layout_marginLeft="@dimen/margin_medium"
       android:textColor="@color/customText"
       android:textStyle="italic"
       />

    <TextView
        android:id="@+id/tv_talk_content"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Learn about Google Keynote led by Sundar Pichai."
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignLeft="@+id/tv_talker"
        android:layout_marginLeft="@dimen/margin_medium"
        android:textSize="@dimen/text_regular_2x"
        android:layout_marginBottom="@dimen/margin_medium_2"
        android:textColor="@color/customText"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignRight="@+id/tv_time"
        android:src="@drawable/menu"
        android:layout_above="@+id/tv_time"
        android:layout_marginBottom="@dimen/margin_small"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="13:38"
        android:textSize="@dimen/text_small"
        android:layout_marginBottom="@dimen/margin_medium_2"
        android:layout_marginRight="@dimen/margin_medium"
        android:textColor="@color/customText"

        />

</RelativeLayout>